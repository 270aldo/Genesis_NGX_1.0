meta {
  name: Metrics Endpoint
  type: http
  seq: 2
}

get {
  url: {{base_url}}/metrics
}

tests {
  test("Metrics endpoint is accessible", function() {
    expect([200, 401]).to.include(res.getStatus());
  });

  test("Metrics response format is valid", function() {
    if (res.getStatus() === 200) {
      const body = res.getBody();
      // Metrics endpoint typically returns Prometheus format
      expect(typeof body).to.equal('string');
      expect(body.length).to.be.above(0);
    }
  });
}
